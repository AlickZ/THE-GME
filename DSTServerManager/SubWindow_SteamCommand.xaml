<Window x:Class="DSTServerManager.SubWindow_SteamCommand"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSTServerManager"
        mc:Ignorable="d"
        Title="SubWindow_SteamCommand" Height="320" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" Margin="10,5,5,5" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" Grid.ColumnSpan="2"/>
        <Button x:Name="button" Content="选择安装路径" Grid.Column="2" Margin="5,5,10,5" Grid.Row="1"/>
        <RadioButton x:Name="radioButton" Content="RadioButton" Margin="10,5,5,5" Grid.Row="2" VerticalContentAlignment="Center"/>
        <RadioButton x:Name="radioButton1" Content="RadioButton" Margin="10,5,5,10" Grid.Row="3" VerticalContentAlignment="Center"/>
        <TextBox x:Name="textBox_Servers_Tab_Log" Margin="10,10,10,5" TextWrapping="Wrap" Background="#FF464646" Foreground="White" IsReadOnly="True" FontFamily="Courier New" Grid.ColumnSpan="3"/>
        <TextBox x:Name="textBox2" Grid.Column="1" Margin="5,5,5,10" Grid.Row="3" TextWrapping="Wrap" Text="TextBox"/>
        <Button x:Name="button1" Content="Button" Grid.Column="2" Margin="5,5,10,10" Grid.Row="2" Grid.RowSpan="2"/>

    </Grid>
</Window>
